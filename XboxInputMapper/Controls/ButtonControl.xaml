<UserControl x:Class="XboxInputMapper.Controls.ButtonControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 Width="36" Height="36">
	<UserControl.RenderTransform>
		<TranslateTransform X="-18" Y="-18" />
	</UserControl.RenderTransform>
	
	<Grid>
		<Ellipse x:Name="shapeBackground" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="Black" StrokeThickness="1" Fill="#8000FFFF">
			<Ellipse.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Remove" Click="MenuRemove_Click" />
				</ContextMenu>
			</Ellipse.ContextMenu>
		</Ellipse>
		<TextBlock x:Name="textTitle" HorizontalAlignment="Center" VerticalAlignment="Center" Text="" IsHitTestVisible="False"/>
	</Grid>
</UserControl>
